<p style="color: green"><%= notice %></p>

<h1>Friends list</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Github</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <th scope="row"><%= friend.id %></th>
        <td><%= link_to friend.first_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.github %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: {confirm: "Ae you sure?"}, class: "btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>